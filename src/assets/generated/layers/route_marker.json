{
  "id": "route_marker",
  "name": {
    "en": "Route markers",
    "de": "Routenmarkierungen"
  },
  "description": {
    "en": "Route markers are small markers often found along official hiking/cycling/riding/skiing routes to indicate the direction of the route.",
    "de": "Routenmarkierungen sind kleine Markierungen, die h√§ufig entlang offizieller Wander-/Rad-/Reit-/Skirouten zu finden sind, um die Richtung der Route anzuzeigen."
  },
  "source": {
    "osmTags": {
      "and": [
        "information=route_marker"
      ]
    }
  },
  "minzoom": 14,
  "title": {
    "render": {
      "en": "Route marker",
      "de": "Routenmarker"
    }
  },
  "pointRendering": [
    {
      "location": [
        "centroid",
        "point"
      ],
      "marker": [
        {
          "icon": {
            "render": "./assets/layers/route_marker/route_marker.svg",
            "id": "assetslayersroutemarkerroutemarkersvg"
          }
        }
      ],
      "iconBadges": [
        {
          "if": "_favourite=yes",
          "then": "circle:white;heart:red"
        }
      ]
    }
  ],
  "presets": [
    {
      "title": {
        "en": "a route marker",
        "de": "ein Routenmarker"
      },
      "tags": [
        "tourism=information",
        "information=route_marker"
      ],
      "description": {
        "en": "A route marker is a small marker often found along official hiking/cycling/riding/skiing routes to indicate the direction of the route.",
        "de": "Ein Routenmarker ist ein kleiner Marker, der oft entlang offizieller Wander-/Fahrrad-/Reit-/Skirouten zu finden ist, um die Richtung der Route anzuzeigen."
      },
      "exampleImages": [
        "./assets/layers/route_marker/bicycle_route_marker.jpg",
        "./assets/layers/route_marker/walking_route_marker.jpg"
      ]
    }
  ],
  "tagRenderings": [
