{
  "id": "shops",
  "name": {
    "en": "Shop",
    "fr": "Magasin",
    "ru": "Магазин",
    "ja": "店",
    "nl": "Winkel",
    "de": "Geschäfte",
    "eo": "Butiko",
    "ca": "Botiga"
  },
  "minzoom": 16,
  "source": {
    "osmTags": {
      "and": [
        "shop~*"
      ]
    }
  },
  "title": {
    "render": {
      "en": "Shop",
      "fr": "Magasin",
      "ru": "Магазин",
      "ja": "店",
      "nl": "Winkel",
      "de": "Geschäft",
      "eo": "Butiko",
      "ca": "Botiga"
    },
    "mappings": [
      {
        "if": {
          "and": [
            "name~*"
          ]
        },
        "then": {
          "en": "{name}",
          "fr": "{name}",
          "ru": "{name}",
          "ja": "{name}",
          "de": "{name}",
          "eo": "{name}",
          "nl": "{name}",
          "ca": "{name}"
        }
      },
      {
        "if": {
          "and": [
            "shop!~yes"
          ]
        },
        "then": {
          "en": "{shop}",
          "fr": "{shop}",
          "ru": "{shop}",
          "ja": "{shop}",
          "de": "{shop}",
          "eo": "{shop}",
          "nl": "{shop}",
          "ca": "{shop}"
        }
      }
    ]
  },
  "description": {
    "en": "A shop",
    "fr": "Un magasin",
    "ja": "ショップ",
    "nl": "Een winkel",
    "ru": "Магазин",
    "de": "Ein Geschäft",
    "eo": "Butiko",
    "hu": "Egy bolt"
  },
  "tagRenderings": [
    "images",
    {
      "question": {
        "en": "What is the name of this shop?",
        "fr": "Qu'est-ce que le nom de ce magasin?",
        "ru": "Как называется этот магазин?",
        "ja": "このお店の名前は何ですか?",
        "nl": "Wat is de naam van deze winkel?",
        "de": "Wie ist der Name dieses Geschäfts?"
      },
      "render": "This shop is called <i>{name}</i>",
      "freeform": {
        "key": "name"
      },
      "id": "shops-name"
    },
    {
      "render": {
        "en": "This shop sells {shop}",
        "fr": "Ce magasin vends {shop}",
        "ja": "こちらのお店では{shop}を販売しております",
        "de": "Dieses Geschäft verkauft {shop}",
        "eo": "Ĉi tiu butiko vendas {shop}",
        "nl": "Deze winkel is van type \"{shop}\""
      },
      "question": {
        "en": "What does this shop sell?",
