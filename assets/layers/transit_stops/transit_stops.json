    "render": {
      "en": "Transit Stop",
      "de": "Haltestelle",
      "da": "Transit Stop",
      "nl": "Bushalte",
      "ca": "Parada de transport públic",
      "cs": "Tranzitní zastávka",
      "es": "Parada de transporte"
    },
    "mappings": [
      {
        "if": "name~*",
        "then": {
          "en": "Stop {name}",
          "de": "Haltestelle {name}",
          "da": "Stop {name}",
          "nl": "Halte {name}",
          "ca": "Parada {name}",
          "cs": "Zastávka {name}",
          "es": "Parada {name}"
        }
      }
    ]
  },
