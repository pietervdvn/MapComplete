        "nl": "Gemaakt van {material}"
      },
      "freeform": {
        "key": "material",
        "addExtraTags": []
      },
      "mappings": [
        {
          "if": "material=wood",
          "then": {
            "en": "Material: wood",
            "de": "Material: Holz",
            "fr": "Matériau : bois",
            "nl": "Gemaakt uit hout"
          }
        },
        {
          "if": "material=metal",
          "then": {
            "en": "Material: metal",
            "de": "Material: Metall",
            "fr": "Matériau : métal",
            "nl": "Gemaakt uit metaal"
          }
        },
        {
          "if": "material=stone",
          "then": {
            "en": "Material: stone",
            "de": "Material: Stein",
            "fr": "Matériau: pierre",
            "nl": "Gemaakt uit steen"
          }
