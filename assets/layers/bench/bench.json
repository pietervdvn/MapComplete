      "en": "Bench",
      "de": "Sitzbank",
      "fr": "Banc",
      "nl": "Zitbank"
    }
  },
  "tagRenderings": [
    "images",
    {
      "render": {
        "en": "Backrest",
        "de": "Rückenlehne",
        "fr": "Dossier",
        "nl": "Rugleuning"
      },
      "freeform": {
        "key": "backrest"
      },
      "mappings": [
        {
          "if": "backrest=yes",
          "then": {
            "en": "Backrest: Yes",
            "de": "Rückenlehne: Ja",
            "fr": "Dossier: Oui",
            "nl": "Heeft een rugleuning"
          }
        },
        {
          "if": "backrest=no",
          "then": {
            "en": "Backrest: No",
            "de": "Rückenlehne: Nein",
            "fr": "Dossier: Non",
            "nl": "Rugleuning ontbreekt"
          }
        }
      ],
      "question": {
        "en": "Does this bench have a backrest?",
        "de": "Hat diese Bank eine Rückenlehne?",
        "fr": "Ce banc dispose-t-il d'un dossier ?",
        "nl": "Heeft deze zitbank een rugleuning?"
      }
    },
    {
      "render": {
        "en": "{seats} seats",
        "de": "{seats} Sitzplätze",
        "fr": "{seats} places",
        "nl": "{seats} zitplaatsen"
