            "icon": {
              "render": "./assets/themes/onwheels/repair.svg",
              "mappings": [
                {
                  "if": "service:bicycle:pump=yes",
                  "then": "./assets/themes/onwheels/bicycle_pump.svg"
                }
              ]
            },
            "iconSize": "40,40,bottom"
          }
        ]
      }
    },
    {
